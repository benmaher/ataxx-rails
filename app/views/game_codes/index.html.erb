<h1>Listing game_codes</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @game_codes.each do |game_code| %>
  <tr>
    <td><%= game_code.name %></td>
    <td><%= link_to 'Show', game_code %></td>
    <td><%= link_to 'Edit', edit_game_code_path(game_code) %></td>
    <td><%= link_to 'Destroy', game_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

